  <p id="notice"><%= notice %></p>
  <p>
    <strong>Photo:</strong>
    <div class="card mb-4 box-shadow">
      <img src="<%= @photo.url %>">
    </div>
  </p>
  <p>
    <strong>Title:</strong>
    <%= @photo.title %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @photo.description %>
  </p>
  <p>
    <strong>Lieu :</strong>
    <%= @photo.place %>
  </p>
  <p>
    <strong>Type :</strong>
    <%= @photo.situation %>
  </p>
  <%# <p>
    <strong>Tags:</strong>
    <%= @photo.tags %>
